<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:StudioSoundPro.UI.ViewModels"
        xmlns:views="using:StudioSoundPro.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="StudioSoundPro.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="StudioSoundPro - Feature #2: Transport &amp; Clock">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Transport Controls at Top -->
        <views:TransportView DockPanel.Dock="Top" 
                           DataContext="{Binding Transport}" 
                           Margin="8"/>
        
        <!-- Audio Testing Below -->
        <ScrollViewer>
            <views:AudioTestView DataContext="{Binding AudioTest}"/>
        </ScrollViewer>
    </DockPanel>

</Window>
