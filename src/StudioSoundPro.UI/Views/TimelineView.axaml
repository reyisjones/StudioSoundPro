<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StudioSoundPro.UI.ViewModels"
             xmlns:views="using:StudioSoundPro.UI.Views"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
             x:Class="StudioSoundPro.UI.Views.TimelineView"
             x:DataType="vm:SessionViewModel">
    
    <Design.DataContext>
        <vm:SessionViewModel/>
    </Design.DataContext>

    <DockPanel>
        
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="#252526" Padding="8" BorderBrush="#444" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Command="{Binding AddAudioTrackCommand}"
                       Content="+ Audio Track"
                       Padding="12,6"
                       ToolTip.Tip="Add a new audio track"/>
                
                <Button Command="{Binding AddTrackCommand}"
                       Content="+ Track"
                       Padding="12,6"
                       ToolTip.Tip="Add a new track"/>
                
                <Separator Width="1" Height="20" Background="#444"/>
                
                <Button Command="{Binding ImportAudioFileCommand}"
                       Content="Import Audio"
                       Padding="12,6"
                       ToolTip.Tip="Import a WAV audio file"/>
                
                <Button Command="{Binding ExportTrackCommand}"
                       Content="Export Track"
                       Padding="12,6"
                       ToolTip.Tip="Export track as WAV file"/>
                
                <Separator Width="1" Height="20" Background="#444"/>
                
                <TextBlock Text="{Binding Tracks.Count, StringFormat=Tracks: {0}}"
                          VerticalAlignment="Center"
                          Foreground="#AAA"
                          Margin="4,0"/>
                
                <Button Command="{Binding ClearAllTracksCommand}"
                       Content="Clear All"
                       Padding="12,6"
                       IsEnabled="{Binding Tracks.Count}"
                       ToolTip.Tip="Remove all tracks"/>
            </StackPanel>
        </Border>
        
        <!-- Track List -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" 
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tracks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:TrackView DataContext="{Binding}" Margin="0,0,0,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </DockPanel>
    
</UserControl>
